{
  extends: [
    "config:recommended",
    "github>aquaproj/aqua-renovate-config#2.4.0",
    "github>aquaproj/aqua-renovate-config:file#2.4.0(^(.*/)?aqua/[^/]*\\.ya?ml$)",
    "github>aquaproj/aqua-renovate-config:installer-script#2.4.0(\\.devcontainer/Dockerfile)",
    "github>suzuki-shunsuke/renovate-config#2.5.0",
  ],
  labels: [
    "renovate:{{depName}}",
    "renovate:{{depName}}/{{newVersion}}",
    "datasource:{{datasource}}",
  ],
  packageRules: [
    // aqua-registry
    {
      matchPackageNames: ["aquaproj/aqua-registry"],
      enabled: false, // Please enable temporarily when the update is required. Basically, the update of aqua-registry isn't needed.
    },
    {
      matchPackageNames: ["aquaproj/aqua-registry"],
      matchUpdateTypes: ["major"],
      enabled: true,
      prPriority: -3,
    },
  ],
}
